{
  "name": "simple-api",
  "version": "0.0.1",
  "scripts": {
    "dev": "node ./bin/www",
    "start": "DEBUG=simple-api:* forever start -l ./forever.log -o ./out.log -e ./err.log ./bin/www",
    "test": "NODE_ENV=test nyc --all mocha"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "express-healthcheck": "^0.1.0",
    "forever": "^0.15.3",
    "morgan": "~1.9.0"
  },
  "devDependencies": {
    "expect.js": "^0.3.1",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "supertest": "^3.0.0"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 50,
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    },
    "exclude": [
      "test/**"
    ],
    "reporter": [
      "lcovonly",
      "text"
    ]
  }
}
